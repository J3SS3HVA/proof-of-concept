<%- include('./partials/head') %>

<body>
        <%- include('./partials/nav') %>

        <main class="main">
            
            <nav class="breadcrumb">
                <ul class="breadcrumb__list">
                    <li class="breadcrumb__item"><a href="/" class="breadcrumb__link">Home</a></li>
                    <li class="breadcrumb__item"><a href="/audit" class="breadcrumb__link">Audit</a></li>
                    <li class="breadcrumb__item"><a href="/financialReview" class="breadcrumb__link">Financial Review</a></li>
                </ul>
            </nav>
        
            <form class="form" action="">
                <h2 class="form__header">Prompt</h2>
                <% allPrompts.forEach(prompt => { %>      
                    <p class="form__paragraph">
                        <%- prompt.text.replace("{{ Financial Statement File }}", '<input type="text" name="financial_statement_file" placeholder="Financial Statement File">')
                                    .replace("{{ Review Date }}", '<input type="date" name="review_date" placeholder="Review Date">')
                                    .replace("{{ Lead Auditor }}", '<input type="text" name="lead_auditor" placeholder="Lead Auditor">') %>
                    </p>

                    <%- include('./partials/buttonSecondary') %>

                    <a class="form__cancel" href="">Cancel</a>

                <% }) %>
            </form>
        
        </main> 
        
        <%- include('./partials/foot') %>
    </div>
</body>
</html>
